<Window x:Class="ArmyArranger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyArranger"
        xmlns:viewmodels="clr-namespace:ArmyArranger.ViewModels"
        xmlns:views="clr-namespace:ArmyArranger.Views"
        mc:Ignorable="d"
        Title="Army Arranger" Height="500" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Window.Resources>
        <DataTemplate x:Name="MenuTemplate" DataType="{x:Type viewmodels:MenuViewModel}">
            <views:MenuView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="AddUnitsTemplate" DataType="{x:Type viewmodels:AddUnitsViewModel}">
            <views:AddUnits DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="CreateArmyListTemplate" DataType="{x:Type viewmodels:CreateArmyListViewModel}">
            <views:CreatArmyList DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="SendMailTemplate" DataType="{x:Type viewmodels:ContactUsViewModel}">
            <views:SendMail DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Name="Screen" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Grid.RowSpan="5" Content="{Binding}"/>
    </Grid>
</Window>
